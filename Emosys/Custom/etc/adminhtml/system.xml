            <tab>emosys</tab>
            <resource>Emosys_Custom::custom</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Landing Page</label>
                <field id="background" translate="label" type="image" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Background</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image\Logo</backend_model>
                    <base_url type="media" scope_info="1">logo</base_url>
                </field>
            </group>
        </section>
    </system>
</config>